@model UrlShortenerWeb.Models.Description

<form asp-controller="Admin" asp-action="EditDescription" method="post">
    <div class="form-group">
        <label asp-for="Content">Description:</label>
        <textarea class="form-control" asp-for="Content" rows="5"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">Save</button>
</form>
